body
    background-color #34495e
    color #ecf0f1
    font-family 'Raleway', sans-serif

#header
    margin-top 30px


#footer
    margin-top 30px
    border-top 1px solid gray-lighter
    padding-top 30px
    color gray-light


.gallery-image img
    display block
    max-width 100%
    height auto

.container
    height 80vh
    display flex
    justify-content center
    align-items center

.center
    margin 0 auto

.ghost-button
    margin-top 6rem
    background-color transparent
    display inline-block
    width 200px
    padding 8px
    color #fff
    border 1px solid #fff
    text-align center
    outline none
    text-decoration none
    transition background-color 0.2s ease-out, color 0.2s ease-out

    &:hover,
    &:active
        background-color #fff
        color #000
        transition: background-color 0.3s ease-in, color 0.3s ease-in

.form-label
    margin-top 5rem

.form-input
    color white
    border-radius 0px
    background-color transparent
    border-top 0px
    border-right 0px
    border-left 0px
    border-bottom 1px solid #2d2d2d
    outline none
    box-shadow none

    &:focus
        border none
        box-shadow none
        border-bottom 1px solid #2d2d2d
